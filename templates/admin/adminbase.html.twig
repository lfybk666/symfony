<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Админочка{% endblock %}</title>
    {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
    {% block stylesheets %}
        {#{{ encore_entry_link_tags('app') }}#}
        <link rel="stylesheet" href="{{ asset('public/assets/framework/fontawesome-free-5.15.4-web/css/all.min.css') }}">
        <link rel="stylesheet" href="{{ asset('public/assets/framework/bootstrap-5.0.2-dist/css/bootstrap.css') }}">
        <link rel="stylesheet" href="{{ asset('public/assets/main/css/style.css') }}">
    {% endblock %}

    {% block javascripts %}
        {#{{ encore_entry_script_tags('app') }}#}
        <script src="https://code.jquery.com/jquery-3.6.0.min.js" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"
                integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ=="
                crossorigin="anonymous" referrerpolicy="no-referrer"></script>
        <script src="{{ asset('public/assets/framework/bootstrap-5.0.2-dist/js/bootstrap.min.js') }}"></script>
    {% endblock %}
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand border-end" href="{{ path('admin_home') }}">
            Админочка
            <i class="fas fa-atom"></i>
        </a>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="{{ path('admin_home') }}">Главная</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="{{ path('admin_user') }}">Пользователи</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" target="_blank" aria-current="page" href="{{ path('home') }}">Выход на сайт</a>
                </li>
            </ul>
            <form class="d-flex">
                <a href="{{ path('app_logout') }}" class="btn btn-outline-danger" type="submit">Выход</a>
            </form>
        </div>
    </div>
</nav>
{% block body %}{% endblock %}
</body>
</html>
